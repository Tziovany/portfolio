---
const { classIcon, techName, color } = Astro.props;
---

<div class="z-0 w-32" id="animation">
  <i class={classIcon}></i>
  <h3>
    {techName}
  </h3>
</div>

<style define:vars={{ color }}>
  div {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;

    background: rgb(51, 145, 203);
    box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
    backdrop-filter: blur(15px);
    -webkit-backdrop-filter: blur(15px);
    border-radius: 10px;
    border: 1px solid rgba(255, 255, 255, 0.39);

    color: #000;
    margin: 1rem;
    padding: 0.3rem 0;

    border-radius: 0.3rem;
  }

  i {
    font-size: 4rem;
  }

  i:hover {
    color: var(--color);
  }

  .animation {
    animation: fliptop 1s ease-out;
  }

  @keyframes flipTop {
    0% {
      opacity: 0;
      transform: translateY(-100px);
    }

    70% {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
